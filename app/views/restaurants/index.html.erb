<div class="col-md-8">
<p id="notice"><%= notice %></p>

<h1><font size="5">レストラン一覧</font><span class="text-muted pull-right"><%= link_to '新規登録', new_restaurant_path, class: "btn btn-default btn-xs" %></span></h1>

    <% @restaurants.each do |restaurant| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= restaurant.title %>
      </div>
        <%= restaurant.tel %>
        <%= restaurant.address %>
        <%= restaurant.web %>
        <%= link_to '詳細', restaurant, class: "btn btn-default btn-xs pull-right" %>
        <%= link_to '編集', edit_restaurant_path(restaurant), class: "btn btn-default btn-xs pull-right" %>
        <%= link_to '削除', restaurant, class: "btn btn-default btn-xs pull-right", method: :delete, data: { confirm: '本当に削除しますか？' } %>
      </div>
    <% end %>

<br>


</div>
