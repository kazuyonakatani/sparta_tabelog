<h1><font size="5">レストラン一覧</font><span class="text-muted pull-right"><%= link_to '新しいお店を登録する', new_restaurant_path, class: "btn active btn-success btn-s" %></span></h1>

    <% @restaurants.each do |restaurant| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= restaurant.title %>
        <span class="text-muted pull-right">投稿日：<%= restaurant.created_at.strftime('%Y/%m/%d %H:%M') %></span>
      </div>
      <div class="panel-body">
        <div class="col-sm-3">
          <img src="<%= restaurant.visual %>" alt="" class="img-responsive user-photo pull-left" width="140">
        </div>
        <div class="col-sm-9">
        <%= link_to '編集', edit_restaurant_path(restaurant), class: "btn active btn-warning btn-product pull-right" %>
        <%= link_to '削除', restaurant_path(restaurant), class: "btn active btn-danger btn-product pull-right", method: :delete, data: { confirm: '本当に削除しますか？' } %>
        <%= link_to '詳細', restaurant_path(restaurant), class: "btn active btn-info btn-product pull-right" %>
        スコア：<img src="<%= restaurant.average_score_star(restaurant) %>"><br>
        TEL：<%= restaurant.tel %><br>
        住所：<%= restaurant.address %><br>
        WEB：<%= restaurant.web %><br>
        </div>
      </div>
    </div>
    <% end %>
</div>

